<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LevelFiveNext"
    android:background="@drawable/level5bg">


    <ImageView
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="5dp"
        android:layout_y="1dp"
        android:onClick="navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/whitenext" />

    <ImageView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="341dp"
        android:layout_x="2dp"
        android:layout_y="1dp"
        android:onClick="navigation"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/homewhite" />

    <ScrollView android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/wendy_one"
                android:freezesText="false"
                android:lineSpacingExtra="100dp"
                android:text="         Lets test what u just saw !"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\n What was the boy's name in the play??"
                android:textColor="@color/about_separator_color"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rg1"
                android:textSize="15dp">

                <RadioButton
                    android:id="@+id/r1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chinu"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="italic"></RadioButton>

                <RadioButton
                    android:id="@+id/r2"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:text="Binnu"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:textStyle="italic"></RadioButton>

                <RadioButton
                    android:id="@+id/r3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tinku"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:textStyle="italic"></RadioButton>
            </RadioGroup>

            <TextView

                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\n What flavour cake was the little boy eating??"
                android:textColor="@color/about_separator_color"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>
            <RadioGroup
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/r11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strawberry"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"
                    android:textStyle="italic"></RadioButton>

                <RadioButton
                    android:id="@+id/r21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chocolate"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:textStyle="italic"></RadioButton>

                <RadioButton
                    android:id="@+id/r31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vanilla"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:textStyle="italic"></RadioButton>
            </RadioGroup>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\n Where did the accident happen??"
                android:textColor="@color/about_separator_color"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>
            <RadioGroup
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/r12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On a ground"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:textStyle="italic"></RadioButton>

                <RadioButton
                    android:id="@+id/r22"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Inside grandpa's home"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:textStyle="italic"></RadioButton>

                <RadioButton
                    android:id="@+id/r32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On the hill station"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:textStyle="italic"></RadioButton>
            </RadioGroup>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\n What did mom apply on grandpa's injury??"
                android:textColor="@color/about_separator_color"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/r13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ointment"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:textStyle="italic"></RadioButton>

                <RadioButton

                    android:id="@+id/r23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salt"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"
                    android:textStyle="italic"></RadioButton>

                <RadioButton
                    android:id="@+id/r33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oil"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"
                    android:textStyle="italic"></RadioButton>
            </RadioGroup>

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\n Who used to ask about grandpa's health??"
                android:textColor="@color/about_separator_color"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>
            <RadioGroup
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/r14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Binnu's friend"
                    android:textSize="16dp"
                    android:textStyle="italic"
                    android:textColor="@android:color/white"></RadioButton>

                <RadioButton
                    android:id="@+id/r24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Binnu"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:textStyle="italic"></RadioButton>

                <RadioButton
                    android:id="@+id/r34"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Binnu's father"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"
                    android:textStyle="italic"></RadioButton>
                /            </RadioGroup>

            <Button
                android:id="@+id/process"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="130dp"
                android:fontFamily="@font/amita"
                android:text="Submit"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="15dp"
                android:textStyle="bold" />


        </LinearLayout>

    </ScrollView>


</RelativeLayout>